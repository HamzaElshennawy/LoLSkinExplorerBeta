<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup  xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
                   xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:viewmodels="clr-namespace:LoLSkinExplorer.ViewModels" x:DataType="viewmodels:SkinPageViewModel"
            x:Class="LoLSkinExplorer.SearchPopupPage"
                   Size="300,150" BackgroundColor="Transparent" >

    <StackLayout Orientation="Vertical" BackgroundColor="Transparent">
        <Entry 
            Placeholder="Enter Champion name or Skin line name" 
            WidthRequest="300"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
            FontSize="Small" HeightRequest="50"
            HorizontalTextAlignment="Center"  />
        <Button Text="Search" WidthRequest="200" HorizontalOptions="CenterAndExpand" CornerRadius="20"/>
    </StackLayout>






</xct:Popup>